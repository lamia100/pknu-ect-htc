<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_height="wrap_content" android:layout_width="fill_parent">
    <View android:background="#FFFFFF" android:layout_height="2px" android:layout_width="fill_parent"></View>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tv_date"></TextView>
    <View android:background="#FFFFFF" android:layout_height="2px" android:layout_width="fill_parent"></View>
    <TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1">
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="아침" android:gravity="center" android:textSize="8pt"></TextView>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:gravity="center" android:textSize="8pt" android:id="@+id/tv_breakfast"></TextView>
        </TableRow>
        <View android:background="#FFFFFF" android:layout_height="2px" android:layout_width="fill_parent"></View>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="점심" android:gravity="center" android:textSize="8pt"></TextView>
            <TextView android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="8pt" android:id="@+id/tv_lunch"></TextView>
        </TableRow>
        <View android:layout_height="2px" android:layout_width="fill_parent" android:background="#FFFFFF"></View>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="저녁" android:gravity="center" android:textSize="8pt"></TextView>
            <TextView android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center" android:textSize="8pt" android:id="@+id/tv_dinner"></TextView>
        </TableRow>
    </TableLayout>
    
</LinearLayout>
